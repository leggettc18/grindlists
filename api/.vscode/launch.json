    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["serve"]
        },
        {
            "name": "Launch Remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "cwd": "${workspaceFolder}",
            "remotePath": "/api",
            "port": 2345,
            "showLog": true,
            "trace": "verbose"
        }
    ]
}